extends ../layouts/common.pug

block content
    h1 Quản lý Sách
    a(href="books/create")
        button.btn.btn-success News
    form(action="/books/search", method="GET")
        input(type="text", name="q")
        button(class="btn btn-secondary m-2") Search
    ul
        each book in books
            li=`Tựa đề: ${book.title}   - Mô tả: ${book.description}`