extends ../layouts/common.pug

block content
    h1.d-flex.align-items-center 
        span.mr-3 Quản lý Sách
        a.btn.btn-primary(href="books/create") News Books
    form.float-sm-right(action="/books/search", method="GET")
        input(type="text", name="q")
        button(class="btn btn-secondary m-2") Search
    table.table
            tr
                th Title
                th Description
                th Delete
                th Update
            each book in books
                tr
                    td= book.title
                    td= book.description
                    td
                        a.btn.btn-light(href="/books/" +book.id +"/delete") Delete
                    td 
                        a.btn.btn-light(href="/books/" +book.id + "/update") Update